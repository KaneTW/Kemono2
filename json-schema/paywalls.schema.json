{
  "title": "Paywalls",
  "description": "A list of paywalls",
  "type": "object",
  "additionalProperties": {
    "$ref": "#/definitions/paywall"
  },
  "definitions": {
    "paywall": {
      "title": "Paywall",
      "description": "Various paywall info.",
      "type": "object",
      "additionalProperties": false,
      "required": [
        "title",
        "origin",
        "import_key"
      ],
      "properties": {
        "title": {
          "type": "string",
          "description": "Full name of the paywall."
        },
        "origin": {
          "type": "string",
          "format": "uri",
          "description": "Absolute url to the paywall origin."
        },
        "import_key": {
          "$ref": "#/definitions/import_key"
        }
      }
    },
    "import_key": {
      "type": "object",
      "title": "ImportKey",
      "description": "The key required to import from the site. The whitespaces should be trimmed before the validation.",
      "properties": {
        "description": {
          "type": "string"
        },
        "pattern": {
          "type": "string",
          "format": "regex"
        },
        "length": {
          "type": "number",
          "description": "Either this or `min_length` and `max_length`."
        },
        "min_length": {
          "type": "number"
        },
        "max_length": {
          "type": "number",
          "default": 1024
        },
        "encoding": {
          "type": "string",
          "enum": [
            "ascii",
            "hex"
          ],
          "default": "ascii"
        },
        "examples": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    }
  }
}
